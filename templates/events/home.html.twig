{% extends 'base.html.twig' %}


{% block title %}ViennaEvents{% endblock %}

{% block body %}
  
  <div class="caption text-center align-items-center">
    <p class="title mt-5 p-5 text-center text-danger display-2"> Find the right event for yourself:</p>
  </div>
  
    <div>

    <div class="row text-center dit justify-content-center">

        <div class="col-lg-12 row justify-content-center">
            {% for event in events %} 

                <div class='container col-lg-4 col-md-6 col-sm-12 nsl justify-content-center'>
                    <div class=' col-12 '>
                        <a href="/details/{{event.id}}" class="btn ">
                            <img style="width:400px; height: 280px"  src="{{asset('pictures/' ~ event.photo )}}">
                        </a> 
                    </div>

                    <div>
                        <a href="/details/{{event.id}}" class="btn">
                            <h3 class="title text-center text-danger">{{event.name}}</h3>
                            <h5>{{event.type}}</h5>
                            <h6 class="mb-5">{{event.date|date()}}</h6> 
                        </a> 
                    </div>
                </div>

            {% endfor %}
        </div>
      
      

    </div>

  </div>


   
   
{% endblock %}